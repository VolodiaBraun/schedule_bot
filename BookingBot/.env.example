# Токен вашего Telegram-бота от @BotFather
BOT_TOKEN=ваш_токен_бота_здесь

# URL базы данных
# Для PostgreSQL: postgresql+asyncpg://username:password@host:port/database_name
# Для SQLite: sqlite+aiosqlite:///./booking_bot.db
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/booking_bot_db

# Путь к файлу логов (опционально)
LOG_FILE_PATH=./logs/bot.log

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Максимальное количество сеансов в день (по умолчанию)
DEFAULT_MAX_SESSIONS_PER_DAY=5

# Длительность сеанса в минутах (по умолчанию)
DEFAULT_SESSION_DURATION=60